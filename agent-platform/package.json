{
  "name": "agent-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w packages/shared",
    "build:api": "npm run build -w apps/api",
    "dev": "npm run dev -w apps/api",
    "start": "npm run start -w apps/api",
    "docker:up": "docker-compose -f infra/docker/docker-compose.yaml up -d",
    "docker:down": "docker-compose -f infra/docker/docker-compose.yaml down"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
